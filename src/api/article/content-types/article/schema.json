{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "meta": {
      "type": "component",
      "repeatable": false,
      "component": "layout.meta",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "intro": {
      "type": "richtext",
      "required": true
    },
    "mainImg": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "date": {
      "type": "date"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categorie.categorie",
      "inversedBy": "articles"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "contentManager": {
      "displayName": "contentManager",
      "type": "component",
      "repeatable": true,
      "component": "common.content-manager",
      "required": true
    },
    "words": {
      "type": "component",
      "repeatable": true,
      "component": "common.texts",
      "required": true
    }
  }
}
